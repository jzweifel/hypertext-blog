{
  "name": "hypertext-blog",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently \"bun run --hot --inspect src/main.ts\" \"bun run uno:dev\"",
    "start": "bun run uno && bun run src/main.ts",
    "test": "xss-scan",
    "db:migrate": "bunx prisma migrate dev",
    "db:generate": "bunx prisma generate",
    "uno": "bunx unocss",
    "uno:dev": "bunx unocss --watch",
    "format:check": "prettier --check .",
    "format": "prettier --write . --list-different"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "bun-types": "^1.0.3",
    "concurrently": "^8.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.0.11",
    "@elysiajs/html": "^0.7.0",
    "@elysiajs/static": "^0.7.1",
    "@kitajs/html": "^3.0.0",
    "@kitajs/ts-html-plugin": "^1.2.0",
    "@lucia-auth/adapter-prisma": "^3.0.2",
    "@lucia-auth/oauth": "^3.3.0",
    "@prisma/client": "^5.3.1",
    "@t3-oss/env-core": "^0.6.1",
    "@tlscipher/holt": "^1.1.0",
    "@unocss/transformer-variant-group": "0.55.7",
    "elysia": "^0.7.15",
    "lucia": "^2.7.1",
    "pino-pretty": "^10.2.0",
    "prisma": "^5.3.1",
    "unocss": "0.55.7",
    "zod": "^3.22.2"
  }
}
